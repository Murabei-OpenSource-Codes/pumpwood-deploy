apiVersion : "v1"
kind: Service
metadata:
  name: loadbalancer-crawler-twitter-open-postgres
  labels:
    type: loadbalancer-db
    db: crawler-twitter-open-postgres
spec:
  type: LoadBalancer
  selector:
    type: db
    db: crawler-twitter-open-postgres
  ports:
    - port: 5432
      targetPort: 5432
  loadBalancerIP: {{ postgres_public_ip }}
  loadBalancerSourceRanges:
    {%- for ip in firewall_ips %}
      - {{ip}}
    {%- endfor %}
